#!/bin/bash

# 本番環境停止スクリプト

echo "🛑 本番環境を停止します..."

# PIDファイルからプロセスを停止
if [ -f "logs/backend_prod.pid" ]; then
    BACKEND_PID=$(cat logs/backend_prod.pid)
    if kill -0 "$BACKEND_PID" 2>/dev/null; then
        echo "📊 バックエンド (PID: $BACKEND_PID) を停止中..."
        kill "$BACKEND_PID"
    fi
    rm -f logs/backend_prod.pid
fi

if [ -f "logs/frontend_prod.pid" ]; then
    FRONTEND_PID=$(cat logs/frontend_prod.pid)
    if kill -0 "$FRONTEND_PID" 2>/dev/null; then
        echo "🌐 フロントエンド (PID: $FRONTEND_PID) を停止中..."
        kill "$FRONTEND_PID"
    fi
    rm -f logs/frontend_prod.pid
fi

# ポートベースでの強制停止（念のため）
echo "🔧 ポートベースでの停止確認..."
if lsof -ti:8000 >/dev/null 2>&1; then
    echo "ポート8000のプロセスを停止中..."
    sudo kill $(lsof -ti:8000) 2>/dev/null || kill $(lsof -ti:8000) 2>/dev/null
fi

if lsof -ti:3000 >/dev/null 2>&1; then
    echo "ポート3000のプロセスを停止中..."
    sudo kill $(lsof -ti:3000) 2>/dev/null || kill $(lsof -ti:3000) 2>/dev/null
fi

# 停止確認
sleep 3
echo ""
echo "📊 停止確認:"
if ! ss -tlnp | grep -E "(3000|8000)" >/dev/null 2>&1; then
    echo "✅ 本番環境が完全に停止しました"
else
    echo "⚠️ 一部のプロセスが残っている可能性があります:"
    ss -tlnp | grep -E "(3000|8000)"
fi

echo ""
echo "🏁 本番環境停止完了" 